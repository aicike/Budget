@{
    ViewBag.Title = "公司管理-创建公司";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model Entity.Company
<div class="row-fluid">
    <div class="span6" style="width: 100%">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>创建公司
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                @using (Ajax.BeginForm("Add", "Company", new AjaxOptions() { UpdateTargetId = "alert" }))
                {
                    <button class="btn blue" type="submit" >
                        保存</button>
                    <a href="@Url.Action("Index", "Company")" class="btn blue" style="">返回</a><br />
                    <br />
                    <table class="table table-hover">
                        <tr>
                            <td style="width: 120px">
                                公司名称：
                            </td>
                            <td>@Html.TextBoxFor(a => a.Name)
                            </td>
                            <td><span style="color:Red">@Html.ValidationMessageFor(a => a.Name)</span>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "公司管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model List<Entity.Company>
<div class="row-fluid">
    <div class="span12" style="width: 100%">
      <a href="@Url.Action("Add","Company")" class="btn blue" style=" width:100px">创建公司</a><br /><br />
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>公司管理
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
              
                <table class="table table-hover">
                    <tr>
                        <th>
                            公司ID
                        </th>
                        <th>
                            公司名称
                        </th>
                        <th>
                            用户管理
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a href="@Url.Action("Index", "CompanyAccount", new { CID = item.ID })">管理用户</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Company", new { CID=item.ID})">修改</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

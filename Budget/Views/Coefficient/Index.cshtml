@{
    ViewBag.Title = "预算系数管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
}
@model List<Entity.BudgetClass>
<div class="row-fluid">
    <div class="span6" style="width: 100%">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>系数管理-预算列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th  style="width: 50px">
                            预算ID
                        </th>
                        <th>
                            预算名称
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a href="@Url.Content(item.CoefficientURL)"> 管理系数</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


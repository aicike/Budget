@{
    ViewBag.Title = ViewBag.YearID + "年实际损益月份列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
$(function(){ UIGeneral.init(); });
}

<div class="row-fluid">
    <div class="span6" style="width: 100%">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>@ViewBag.YearID 年实际损益月份列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            月份
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @for (int i = 1; i < 13; i++)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Detail", "ProfitLoss", new { YearID = Model.Rows[i]["Yearid"],MonthID=i })">@(i)月份实际数据</a>
                            </td>
                            <td>
                                @if (Model.Rows[i]["Type"].ToString() == "0")
                                { 
                                    <span style="color: #35aa47">录入实际损益</span>
                                }
                                else if (Model.Rows[i]["Type"].ToString() == "1")
                                {
                                    @Ajax.ActionLink("上报", "ReportProfitLoss", "ProfitLoss", new { PMID = Model.Rows[i]["PMID"] }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "if (confirm('你确定要删除吗')) {return true }" }, new { @class = "tooltips", style = "color: #4d8bf8; cursor: pointer", data_placement = "top", data_original_title = "注意：上报后不可更改。" })
                                }
                                else
                                {
                                    <span style="color: #e02222">未填写预算</span>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

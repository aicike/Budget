@{
    ViewBag.Title = "损益预算";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
}
@model System.Data.DataTable
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
                损益预算</h3>
            <ul class="breadcrumb">
                <li><i class="icon-home"></i><a href="@Url.Action("Index", "Home")">首页</a> <i class="icon-angle-right">
                </i></li>
                <li><a href="#">损益预算</a></li>
            </ul>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6" style="width: 100%">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>损益预算年份列表
                    </div>
                    <div class="tools">
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-hover">
                        <tr>
                            <th>
                                预算年份
                            </th>
                            <th style="width: 20%">
                                操作
                            </th>
                        </tr>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Detail", "ProfitLoss", new { YearID = 1 })">2015年损益预算</a>
                                </td>
                                <td>
                                    <a style="color: #4d8bf8; cursor: pointer" data-placement="right" data-original-title="Tooltip in right">
                                        上报</a> <span style="color: #e02222">未填写预算</span> <span style="color: #35aa47">已上报</span>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
